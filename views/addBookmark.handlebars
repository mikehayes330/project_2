<header id="header">
        <div class="headContain">
            <h1 class="logo">Book<span class="spanDC">Marquis</span></h1>
            <nav>
                <ul>
                    <li><a href="/members">View Bookmark</a></li>
                    <li><a href="/logout" class="logOutBtn">Log Out</a></li>
                </ul>
            </nav>
            <div class="menu-toggle"><i class="fas fa-bars" onclick="openSlideMenu()" aria-hidden="true"></i></div>
            <div id="side-menu" class="side-nav">
                <a href="#" onclick="closeSideMenu()" class="btn-close">&times;</a>
                <a href="/members">View Bookmarks</a>
                <a href="/logout">Log Out</a>
            </div>
        </div>
    </header>
    <main id="main">
        <section class="contain">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-xl-12">
                    <div class="card">
                        <div class="card-header">
                            <h2>Welcome <span class="spanDC member-name"></span> !</h2>
                        </div>
                        <br>
                        <div class="card-body has-text-center">
                            <div class="row">
                                <div class="col-12 col-sm-12 col-md-6 col-xl-6">
                                    <h2 id="currentDate">Current Date</h2>
                                    <h3 id="currentTime">Current Time</h3>
                                </div>
                                <div class="col-12 col-sm-12 col-md-6 col-xl-6">
                                    <h2 id="cityDisplay">Current Location</h2>
                                   <div id="weather"> <h3 id="tempDisplay">Current Temp</h3>
                                    
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-xl-6" style="text-align: center;">
                    <div class="card">
                        <div class="card-header">
                            <h2>Add/Edit<span class="spanDC"> Bookmarks</span></h2>
                            <h6>Enter Info and Click Edit to Edit Bookmark</h6>
                        </div>
                        <div class="card-body">
                            <form class="login">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="bookmark-title" placeholder="Bookmark Name">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="bookmark-url" placeholder="URL To Bookmark">
                                </div>
                                <br>
                                <button id="bookmarkSubmit" class="btn logOutBtn" style="width: auto;">Save Bookmark</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-xl-6" style="text-align: center;">
                    <div class="card">
                        <div class="card-header">
                            <h2>Google<span class="spanDC"> Search</span></h2>
                            <h6>Opens New Tab with Search Results</h6>
                        </div>
                        <div class="card-body">
                            <form class="login">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="google" placeholder="Search Google">
                                </div>
                                <br>
                                <button class="btn logOutBtn" id="googleSubmit">Search!</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="contain">
            <!-- About Me Card -->
            <div class="card">
                <div class="card-header">
                    <h2>All<span class="spanDC"> Bookmarks</span></h2>
                    <h6>Click To Delete A Bookmark</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        {{#each bookmark}} 
                        <div class="col-12 col-md-6 col-xl-4">
                            <a href="https://{{dataValues.url}}" target="_blank">
                                <div class="card cardBtn">
                                    <div class="card-header">
                                         <h2 style="color: #E87770">{{dataValues.title}}</h2>
                                    </div>
                            </a>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-6">
                                                <button class="delete-bookmark btn" data-toggle="tooltip" data-placement="left" title="Delete this bookmark" data-id="{{dataValues.id}}"><i class="fas fa-trash-alt"></i></button>
                                            </div>
                                            <div class="col-6">
                                                <button class="updateButton btn" data-toggle="tooltip" data-placement="right" title="Fill out form above and click edit to edit bookmark" data-id="{{dataValues.id}}">Edit</button>
                                            </div>
                                        </div>
                                        
                                    </div>
                                
                                 </div>
                        </div>
                                        {{else}}
                                            <div class="col-12 col-md-12 col-xl-12">
                                                <h2 style="text-align: center;">No Bookmarks Saved. Please add bookmarks.</h2>
                                            </div>
                                        {{/each}}
                    </div>
                </div>
            </div>
            </div>
        </section>
    </main>
    <footer>
        <p>Developed by Mike Hayes, Michael Olshewski, Aaron Holcomb, Michelle Wolf, Kyle Felder</p>
        <br>
        <a target="_blank" href="www.unsplash.com"><p>Unsplash</p></a>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="dist/sidenav.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script type="text/javascript" src="dist/addBookmark.min.js"></script>
    <script type="text/javascript" src="dist/weather.min.js"></script>
    <script type="text/javascript" src="dist/moment.min.js"></script>


