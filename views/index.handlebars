    <main id="main">
        <section class="contain">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-xl-12">
                    <div class="card">
                        <div class="card-header">
                            <h1>Sign Up</h1>
                        </div>
                        <div class="card-body" style="text-align: center;">
                            <form class="signup">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="name-input" placeholder="Name" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" id="email-input" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="password-input" placeholder="Password" required>
                                </div>
                           
                            <br>
                            <div class="row">
                                <div class="col-12 col-sm-12 col-md-6" style="margin-top: 5px;">
                                    <button type="submit" class="btn logOutBtn">Sign Up</button>
                                </div>
                                <br>
                                 </form>
                                <div class="col-12 col-sm-12 col-md-6" style="margin-top: 5px;">
                                    <form method="get" action="/login">
                                        <button class="btn logOutBtn">Log In</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
