        <div class="headContain">
            <h1 class="logo">Book<span class="spanDC">Marquis</span></h1>
            <nav>
                <ul>
                    <li><a href="/login" class="logOutBtn" target="_blank">Log In</a></li>
                </ul>
            </nav>
            <div class="menu-toggle"><i class="fas fa-bars" onclick="openSlideMenu()" aria-hidden="true"></i></div>
